<h1>Uploads#index</h1>
<p>Find me in app/views/uploads/index.html.erb</p>

<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New upload", new_upload_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @uploads.each do |upload| %>
         
         <tr>
            <td><%= upload.name %></td>
            <td><%= link_to "Download upload", upload.attachment_url %></td>
            <td><%= button_to "Delete",  upload, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{upload.name}?" %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>